<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/TopStick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backarrow"
            app:tint="#EEE"
            app:fabSize="mini"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/segoeui"
            android:gravity="top"
            android:maxLines="1"
            android:text="Verify"
            android:layout_marginTop="160dp"
            android:textColor="@color/bloodred"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/verify"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/segoeui"
            android:text="We have sent OTP on your"
            android:textColor="@color/bloodred"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verify" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/segoeui"
            android:text="Number +91"
            android:textColor="@color/bloodred"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.297"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1" />

        <TextView
            android:id="@+id/pho_number"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/t2"
            android:layout_toRightOf="@+id/t2"
            android:fontFamily="@font/segoeui"
            android:text="textview"
            android:textColor="@color/bloodred"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.742"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/t1" />

        <View
            android:id="@+id/enterPin"
            android:layout_width="310dp"
            android:layout_height="65dp"
            android:layout_below="@+id/pho_number"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="168dp"
            android:background="@drawable/border_rect_box"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verify" />


        <EditText
            android:id="@+id/inputcode1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/enterPin"
            android:layout_alignLeft="@+id/enterPin"
            android:layout_alignTop="@+id/enterPin"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.199"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />

        <EditText
            android:id="@+id/inputcode2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/enterPin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/enterPin"
            app:layout_constraintHorizontal_bias="0.257"
            app:layout_constraintStart_toStartOf="@+id/enterPin"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />

        <EditText
            android:id="@+id/inputcode3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/enterPin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/enterPin"
            app:layout_constraintHorizontal_bias="0.921"
            app:layout_constraintStart_toStartOf="@+id/enterPin"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />

        <EditText
            android:id="@+id/inputcode4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/enterPin"
            android:layout_alignLeft="@+id/enterPin"
            android:layout_alignTop="@+id/enterPin"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/enterPin"
            app:layout_constraintHorizontal_bias="0.753"
            app:layout_constraintStart_toStartOf="@+id/enterPin"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />

        <EditText
            android:id="@+id/inputcode5"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/enterPin"
            android:layout_alignLeft="@+id/enterPin"
            android:layout_alignTop="@+id/enterPin"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/enterPin"
            app:layout_constraintHorizontal_bias="0.582"
            app:layout_constraintStart_toStartOf="@+id/enterPin"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />

        <EditText
            android:id="@+id/inputcode6"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/enterPin"
            android:layout_alignLeft="@+id/enterPin"
            android:layout_alignTop="@+id/enterPin"
            android:backgroundTint="#004445"
            android:elevation="5dp"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#004445"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/enterPin"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="@+id/enterPin"
            app:layout_constraintTop_toTopOf="@+id/enterPin" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:elevation="50dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterPin">

            <TextView
                android:id="@+id/resendbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/segoeuibold"
                android:text=" Resend OTP"
                android:textColor="@color/bloodred"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/BottomStick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:backgroundTint="#16000000"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toTopOf="@+id/vernextbtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </Button>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/vernextbtn"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_margin="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/bloodred"
                android:gravity="center"
                android:text="  Next"
                android:textSize="10dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>