<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment"
    android:id="@+id/main_post_container">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/make_a_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoeuibold"
        android:layout_marginTop="40dp"
        android:text="I would like to"
        android:textSize="26sp"
        android:textColor="@color/greyblack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/postDonorFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:fontFamily="@font/segoeuibold"
        android:gravity="center"
        android:text=" Donor"
        android:textColor="@color/white"
        app:elevation="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/postRecFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:fontFamily="@font/segoeuibold"
        android:gravity="center"
        android:text="  Receiver"
        android:textColor="@color/white"
        app:elevation="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you wish to donate blood"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/segoeui"
        app:layout_constraintEnd_toEndOf="@+id/postDonorFab"
        app:layout_constraintStart_toStartOf="@+id/postDonorFab"
        app:layout_constraintTop_toBottomOf="@+id/postDonorFab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you are in need of blood"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/segoeui"
        app:layout_constraintEnd_toEndOf="@+id/postRecFab"
        app:layout_constraintStart_toStartOf="@+id/postRecFab"
        app:layout_constraintTop_toBottomOf="@+id/postRecFab" />




</androidx.constraintlayout.widget.ConstraintLayout>